<h1>Listing photos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Photo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @photos.each do |photo| %>
    <tr>
      <td><%= link_to photo.description, photo_path(photo) %></td>
      <td><%= image_tag photo.photo_url(:thumb) %></td>
      <td><%= link_to 'Edit', edit_photo_path(photo), class: 'btn' %></td>
      <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Photo', new_photo_path, class: 'btn' %>
<% end %>
