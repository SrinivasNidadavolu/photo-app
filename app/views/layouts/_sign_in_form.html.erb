<%= form_for("user", :url => user_session_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, 
      :placeholder => "Email address",
      :autofocus => "autofocus" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password,
      :placeholder => "Password" %>
  </div>

  <div>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </div>

  <div>
    <%= f.submit "Sign in" %> 
  </div>

<% end %>
